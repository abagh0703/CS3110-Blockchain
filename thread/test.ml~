let () = print_endline "somethong"

let prog1 n =
  let result = ref 0 in
  let f i =
    for j = 1 to n do
      let v = !result in
      Thread.delay (Random.float 1.);
      result := v + i;
      Printf.printf "Value %d\n" !result;

      print_int !result
    done in
  ignore (Thread.create f 1);
  ignore (Thread.create f 2)

let () = prog1 5

let rec looper n =
  if n = 0 then () else looper (n-1)

let () = looper 5555555555
           
